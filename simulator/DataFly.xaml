<UserControl x:Class="simulator.DataFly"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:simulator"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300" FontWeight="Bold">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions >
        <Label Content="altimeter" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Altimeter, Mode=OneWay}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="airspeed" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Airspeed, Mode=OneWay}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="heading" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Heading, Mode=OneWay}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="pitch" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Pitch, Mode=OneWay}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="roll" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Roll, Mode=OneWay}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="yaw" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
        <Label Content="{Binding VM_Yaw, Mode=OneWay}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right"  VerticalAlignment="Center" Width="auto" Height="auto" FontSize="20"/>
    </Grid>
</UserControl>
